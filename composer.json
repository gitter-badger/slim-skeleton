{
    "name": "oanhnn/slim-skeleton",
    "type": "project",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": ["microframework", "rest", "router"],
    "homepage": "https://github.com/oanhnn/slim-skeleton/wiki",
    "license": "MIT",
    "authors": [
        {
            "name": "OanhNN",
            "email": "oanhnn.bk@gmail.com",
            "homepage": "https://oanhnn.com/"
        }
    ],
    "require": {
        "php": ">=5.4",
        "monolog/monolog": "~1.6",
        "slim/slim": "~2.4",
        "slim/views": "~0.1",
        "twig/twig": "~1.13"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-install-cmd": "App\\Console\\Installer::postInstall"
    }
}
